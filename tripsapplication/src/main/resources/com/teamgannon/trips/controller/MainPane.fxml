<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<Pane fx:id="mainPanel" maxHeight="700" maxWidth="1100.0" minHeight="700" minWidth="1100" prefHeight="700.0"
      prefWidth="1100.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.teamgannon.trips.controller.MainPane">

    <MenuBar fx:id="menuBar" layoutX="2.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="29.0"
             prefWidth="1100.0">
        <Menu mnemonicParsing="false" text="General">
            <MenuItem mnemonicParsing="false" onAction="#simulate" text="Simulate"/>
            <MenuItem mnemonicParsing="false" onAction="#plotStars" text="Plot Stars"/>
            <MenuItem mnemonicParsing="false" onAction="#plotRoutes" text="Plot Routes"/>
            <MenuItem mnemonicParsing="false" onAction="#clearStars" text="Clear Stars"/>
            <MenuItem mnemonicParsing="false" onAction="#clearRoutes" text="Clear Routes"/>
            <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Display">
            <MenuItem mnemonicParsing="false"
                      onAction="#showApplicationPreferences"
                      text="Change Application Preferences..."/>
            <SeparatorMenuItem/>
            <CheckMenuItem fx:id="toggleGridMenuitem"
                           mnemonicParsing="false"
                           onAction="#toggleGrid"
                           text="Toggle Grid"/>
            <CheckMenuItem fx:id="toggleLabelsMenuitem"
                           mnemonicParsing="false"
                           onAction="#toggleLabels"
                           text="Toggle Labels"/>
            <CheckMenuItem fx:id="toggleExtensionsMenuitem"
                           mnemonicParsing="false"
                           onAction="#toggleGridExtensions"
                           text="Toggle Grid Extensions"/>
            <CheckMenuItem fx:id="toggleStarMenuitem"
                           mnemonicParsing="false"
                           onAction="#toggleStars"
                           text="Toggle Stars"/>
            <CheckMenuItem fx:id="toggleScaleMenuitem"
                           mnemonicParsing="false"
                           onAction="#toggleScale"
                           text="Toggle Scale"/>
            <CheckMenuItem fx:id="toggleRoutesMenuitem"
                           mnemonicParsing="false"
                           onAction="#toggleRoutes"
                           text="Toggle  Routes"/>
            <SeparatorMenuItem/>
            <CheckMenuItem fx:id="toggleSidePaneMenuitem"
                           mnemonicParsing="false"
                           onAction="#toggleSidePane"
                           text="Toggle Side Pane"/>
            <CheckMenuItem fx:id="toggleToolBarMenuitem"
                           mnemonicParsing="false"
                           onAction="#toggleToolbar"
                           text="Toggle Toolbar"/>
            <CheckMenuItem fx:id="toggleStatusBarMenuitem"
                           mnemonicParsing="false"
                           onAction="#toggleStatusBar"
                           text="Toggle Status Bar"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Data Management">
            <MenuItem mnemonicParsing="false" onAction="#loadDataSetManager" text="Load Dataset Manager..."/>
            <MenuItem mnemonicParsing="false" onAction="#viewEditStarData" text="View/Edit Star Data"/>
            <MenuItem mnemonicParsing="false" onAction="#plotStars" text="Plot Stars"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Search">
            <MenuItem mnemonicParsing="false" onAction="#findInView" text="Find Star in View..."/>
            <MenuItem mnemonicParsing="false" onAction="#runQuery" text="Show Query Dialog..."/>
        </Menu>
        <Menu mnemonicParsing="false" text="Reports">
            <MenuItem mnemonicParsing="false" onAction="#distanceReport" text="Distance .."/>
            <MenuItem mnemonicParsing="false" onAction="#routeFinder" text="Route Finder ..."/>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" onAction="#aboutTrips" text="About Terran Republic Viewer"/>
            <MenuItem mnemonicParsing="false" onAction="#howToSupport" text="How to get support"/>
            <MenuItem mnemonicParsing="false" onAction="#checkUpdate" text="Check for update"/>
        </Menu>
    </MenuBar>
    <VBox layoutX="2.0" layoutY="29.0" prefHeight="39.0" prefWidth="1100.0">
        <ToolBar fx:id="toolBar" prefHeight="40.0" prefWidth="856.0" VBox.vgrow="ALWAYS">
            <ToggleButton fx:id="toggleStarBtn" mnemonicParsing="false" onAction="#toggleStars" text="Stars"/>
            <ToggleButton fx:id="toggleGridBtn" mnemonicParsing="false" onAction="#toggleGrid" text="Grid"/>
            <ToggleButton fx:id="toggleLabelsBtn" mnemonicParsing="false" onAction="#toggleLabels" text="Labels"/>
            <ToggleButton fx:id="toggleStemBtn" mnemonicParsing="false" onAction="#toggleGridExtensions"
                          text="Extensions"/>
            <ToggleButton fx:id="toggleScaleBtn" mnemonicParsing="false" onAction="#toggleScale" text="Scale"/>
            <ToggleButton fx:id="toggleSettings" mnemonicParsing="false" onAction="#toggleSidePane" text="Side Pane"/>
            <ToggleButton fx:id="toggleZoomInBtn" mnemonicParsing="false" onAction="#zoomIn" text="+"/>
            <ToggleButton fx:id="toggleZoomOutBtn" mnemonicParsing="false" onAction="#zoomOut" text="-"/>
            <CheckBox fx:id="animationCheckbox" mnemonicParsing="false" onAction="#runAnimation" text="animate"/>
        </ToolBar>
    </VBox>
    <SplitPane fx:id="mainSplitPane" dividerPositions="0.76" layoutX="2.0" layoutY="70.0" prefHeight="588.0"
               prefWidth="1100.0">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="554.0" prefWidth="785.0">
            <StackPane fx:id="leftDisplayPane" minHeight="680.0" minWidth="780.0" prefHeight="680.0"
                       prefWidth="1080.0"/>
        </AnchorPane>
        <AnchorPane minHeight="0.0" minWidth="0.0">
            <VBox fx:id="settingsPane" minHeight="0.0" minWidth="0.0" prefHeight="588.0" prefWidth="260.0">
                <Accordion fx:id="propertiesAccordion">
                    <panes>
                        <TitledPane fx:id="datasetsPane" prefHeight="200.0" prefWidth="200.0" text="DataSets Available">
                        </TitledPane>
                        <TitledPane fx:id="objectsViewPane" prefHeight="200.0" prefWidth="200.0"
                                    text="Objects in View"/>
                        <TitledPane fx:id="stellarObjectPane" prefHeight="200.0" prefWidth="200.0"
                                    text="Stellar Object Properties">
                        </TitledPane>
                        <TitledPane fx:id="routingPane" prefHeight="200.0" prefWidth="200.0" text="Star Routing"/>
                    </panes>
                </Accordion>
            </VBox>
        </AnchorPane>
    </SplitPane>
    <HBox fx:id="statusBar" layoutX="2.0" layoutY="659.0" prefHeight="39.0" prefWidth="1100.0">
        <Label fx:id="databaseStatus" text="No Database Loaded" textFill="#3333FF">
            <font>
                <Font name="Arial" size="15.0"/>
            </font>
        </Label>
    </HBox>
</Pane>
